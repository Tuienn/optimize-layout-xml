<?xml version="1.0" encoding="utf-8"?>
<!-- Level 1: Root LinearLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Level 2: Container for entire form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Level 3: Inner container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Level 4: Content wrapper -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Level 5: Form content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF"
                    android:elevation="4dp">

                    <!-- Avatar -->
                    <ImageView
                        android:id="@+id/ivAvatar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_person"
                        android:background="@drawable/bg_avatar_placeholder"
                        android:layout_marginBottom="24dp"
                        android:contentDescription="@string/form_title" />

                    <!-- Form Title -->
                    <TextView
                        android:id="@+id/tvFormTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/form_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#212121"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="24dp" />

                    <!-- Full Name -->
                    <TextView
                        android:id="@+id/tvLabelFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_full_name"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_full_name"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        android:background="@drawable/bg_edittext"
                        android:layout_marginBottom="16dp" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/tvLabelEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_email"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_email"
                        android:inputType="textEmailAddress"
                        android:padding="12dp"
                        android:background="@drawable/bg_edittext"
                        android:layout_marginBottom="16dp" />

                    <!-- Phone -->
                    <TextView
                        android:id="@+id/tvLabelPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_phone"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_phone"
                        android:inputType="phone"
                        android:padding="12dp"
                        android:background="@drawable/bg_edittext"
                        android:layout_marginBottom="16dp" />

                    <!-- Address -->
                    <TextView
                        android:id="@+id/tvLabelAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_address"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_address"
                        android:inputType="textPostalAddress"
                        android:padding="12dp"
                        android:background="@drawable/bg_edittext"
                        android:layout_marginBottom="24dp" />

                    <!-- Submit Button -->
                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_submit"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_button_primary"
                        android:padding="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
