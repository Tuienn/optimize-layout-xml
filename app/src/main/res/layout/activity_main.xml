<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvMainSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_subtitle"
        android:textSize="16sp"
        android:textColor="#757575"
        android:textAlignment="center"
        android:layout_marginBottom="48dp" />

    <Button
        android:id="@+id/btnHierarchyOptimization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_hierarchy_optimization"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_primary"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnMergeOptimization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_merge_optimization"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_secondary"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnOverdrawOptimization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_overdraw_optimization"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_primary"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnRecyclerViewOptimization"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_recyclerview_optimization"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_secondary"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>
