<?xml version="1.0" encoding="utf-8"?>
<!-- Flat ConstraintLayout - Only 1 level hierarchy -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <!-- Card Background (moved to back by declaring first with lower elevation) -->
    <View
        android:id="@+id/cardBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Avatar -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_person"
        android:background="@drawable/bg_avatar_placeholder"
        android:contentDescription="@string/form_title"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="56dp" />

    <!-- Form Title -->
    <TextView
        android:id="@+id/tvFormTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/form_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/ivAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Full Name Label -->
    <TextView
        android:id="@+id/tvLabelFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_full_name"
        android:textSize="14sp"
        android:textColor="#424242"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvFormTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp" />

    <!-- Full Name Input -->
    <EditText
        android:id="@+id/etFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_full_name"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:background="@drawable/bg_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelFullName"
        app:layout_constraintStart_toStartOf="@id/tvLabelFullName"
        app:layout_constraintEnd_toEndOf="@id/tvLabelFullName"
        android:layout_marginTop="8dp" />

    <!-- Email Label -->
    <TextView
        android:id="@+id/tvLabelEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_email"
        android:textSize="14sp"
        android:textColor="#424242"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/etFullName"
        app:layout_constraintStart_toStartOf="@id/tvLabelFullName"
        app:layout_constraintEnd_toEndOf="@id/tvLabelFullName"
        android:layout_marginTop="16dp" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:background="@drawable/bg_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelEmail"
        app:layout_constraintStart_toStartOf="@id/tvLabelFullName"
        app:layout_constraintEnd_toEndOf="@id/tvLabelFullName"
        android:layout_marginTop="8dp" />

    <!-- Phone Label -->
    <TextView
        android:id="@+id/tvLabelPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_phone"
        android:textSize="14sp"
        android:textColor="#424242"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="@id/tvLabelFullName"
        app:layout_constraintEnd_toEndOf="@id/tvLabelFullName"
        android:layout_marginTop="16dp" />

    <!-- Phone Input -->
    <EditText
        android:id="@+id/etPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_phone"
        android:inputType="phone"
        android:padding="12dp"
        android:background="@drawable/bg_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelPhone"
        app:layout_constraintStart_toStartOf="@id/tvLabelFullName"
        app:layout_constraintEnd_toEndOf="@id/tvLabelFullName"
        android:layout_marginTop="8dp" />

    <!-- Address Label -->
    <TextView
        android:id="@+id/tvLabelAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_address"
        android:textSize="14sp"
        android:textColor="#424242"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/etPhone"
        app:layout_constraintStart_toStartOf="@id/tvLabelFullName"
        app:layout_constraintEnd_toEndOf="@id/tvLabelFullName"
        android:layout_marginTop="16dp" />

    <!-- Address Input -->
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_address"
        android:inputType="textPostalAddress"
        android:padding="12dp"
        android:background="@drawable/bg_edittext"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvLabelAddress"
        app:layout_constraintStart_toStartOf="@id/tvLabelFullName"
        app:layout_constraintEnd_toEndOf="@id/tvLabelFullName"
        android:layout_marginTop="8dp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_submit"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_button_primary"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/etAddress"
        app:layout_constraintStart_toStartOf="@id/tvLabelFullName"
        app:layout_constraintEnd_toEndOf="@id/tvLabelFullName"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
