<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.DayNight"
        tools:targetApi="31">
        
        <!-- Main Activity - Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Hierarchy Selector Activity -->
        <activity
            android:name=".optimizations.hierarchy.HierarchySelectorActivity"
            android:exported="false"
            android:label="@string/hierarchy_optimization" />
        
        <!-- Unoptimized Activity -->
        <activity
            android:name=".optimizations.hierarchy.UnoptimizedActivity"
            android:exported="false"
            android:label="@string/unoptimized_layout" />
        
        <!-- Optimized Activity -->
        <activity
            android:name=".optimizations.hierarchy.OptimizedActivity"
            android:exported="false"
            android:label="@string/optimized_layout" />
        
        <!-- Merge Selector Activity -->
        <activity
            android:name=".optimizations.merge.MergeSelectorActivity"
            android:exported="false"
            android:label="@string/merge_optimization" />
        
        <!-- Without Merge Activity -->
        <activity
            android:name=".optimizations.merge.WithoutMergeActivity"
            android:exported="false"
            android:label="@string/without_merge_layout" />
        
        <!-- With Merge Activity -->
        <activity
            android:name=".optimizations.merge.WithMergeActivity"
            android:exported="false"
            android:label="@string/with_merge_layout" />
        
        <!-- Overdraw Selector Activity -->
        <activity
            android:name=".optimizations.overdraw.OverdrawSelectorActivity"
            android:exported="false"
            android:label="@string/overdraw_optimization" />
        
        <!-- With Overdraw Activity -->
        <activity
            android:name=".optimizations.overdraw.WithOverdrawActivity"
            android:exported="false"
            android:label="@string/with_overdraw_layout" />
        
        <!-- No Overdraw Activity -->
        <activity
            android:name=".optimizations.overdraw.NoOverdrawActivity"
            android:exported="false"
            android:label="@string/no_overdraw_layout" />
            
    </application>

</manifest>
